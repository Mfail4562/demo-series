{% extends 'base.html.twig' %}

{% block body %}
    <section class="series-list">
        {% for serie in series %}
            <article>
                <a href="{{ path('series_details', {'id' : serie.id }) }}"
                   title="view serie's details | {{ serie.seasons|length}} seasons">
                    <img src="{{ asset('img/posters/series/' ~ serie.poster) }}" alt="{{ serie.name }}">
                </a>
            </article>
        {% endfor %}
    </section>

{% endblock %}

{% block title %}
the best series | {{ parent() }}
{% endblock %}

